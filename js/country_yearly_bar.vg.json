{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 800,
    "height": 400,
    "title": "Yearly number of natural disasters from 1970 to 2021 filtered by continents",
    "data": {
        "url": "https://raw.githubusercontent.com/MethmaWijerathna/FIT3179-Assignment-2/main/data/Country%20Totals%20Yearly.csv"
    },
    "params": [
        {
            "name": "Continent_selection",
            "bind": {
                "input": "select",
                "options": [
                    null,
                    "Africa",
                    "Americas",
                    "Asia",
                    "Europe",
                    "Oceania"
                ],
                "labels": [
                    "Show All",
                    "Africa",
                    "Americas",
                    "Asia",
                    "Europe",
                    "Oceania"
                ],
                "name": "Continent Selection: "
            }
        }
    ],
    "transform": [
        {
            "filter": "datum.Year > 1969"
        },
        {
            "filter": "Continent_selection == null || datum.Continent == Continent_selection"
        }
    ],
    "mark": "bar",
    "encoding": {
        "x": {
            "field": "Year",
            "type": "nominal",
            "title": "Year"
        },
        "y": {
            "field": "Disasters",
            "type": "quantitative",
            "title": "Number of Disasters",
            "scale": {"domain": [0, 450]}
        },
        "color": {
            "field": "Disasters",
            "scale": {"range": ["#F6BE00"]},
            "legend": null
        },
        "tooltip": [
            {
                "field": "Country",
                "type": "nominal"
            },
            {
                "field": "Disasters",
                "type": "quantitative",
                "format": ","
            },
            {
                "field": "Year",
                "type": "nominal",
                "format": ""
            }
        ]
    }

}